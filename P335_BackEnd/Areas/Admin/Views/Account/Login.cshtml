@model AccountLoginVM
@{
    Layout = "_AuthLayout";
}

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="card-body p-5">
                            <h3 class="mb-5">Sign in</h3>

                            <div class="form-outline mb-4">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" style="color:red"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label">Password</label>
                                <input asp-for="Password" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" style="color:red"></span>
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                                <label class="form-check-label"> Remember password </label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                            @if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
                            {
                                <span style="color:red">@Model.ErrorMessage</span>
                            }
                            <br />
                            <br />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
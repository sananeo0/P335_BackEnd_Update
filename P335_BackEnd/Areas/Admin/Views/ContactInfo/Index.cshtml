@model ContactInfoIndexVM

<h1>Contact Info</h1>
<br />
<form asp-controller="ContactInfo" asp-action="Index" method="post">
    <div class="form-group">
        <label for="1">Email address</label>
        @if (User.IsInRole("Admin"))
        {
            <input asp-for="Email" class="form-control" id="1">
        }
        else
        {
            <input disabled asp-for="Email" class="form-control" id="1">
        }
    </div>
    <div class="form-group">
        <label for="2">Phone number</label>

        @if (User.IsInRole("Admin"))
        {
            <input asp-for="PhoneNumber" class="form-control" id="2">

        }
        else
        {
            <input disabled asp-for="PhoneNumber" class="form-control" id="2">
        }
    </div>
    <br />

    @if (User.IsInRole("Admin"))
    {
        <button type="submit" class="btn btn-warning">Update</button>
    }
    else
    {
        <button type="submit" class="btn btn-warning disabled">Update</button>
    }
</form>